<h1>{{username}}'s Bookshelves</h1>

{{#each shelves}}
<div class="list-group">
  <a href="/shelves/{{shelfTitle}}" class="list-group-item list-group-item-action flex-column align-items-start active">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">{{shelfTitle}}</h5>
    </div>
  </a>
</div>
{{/each}}